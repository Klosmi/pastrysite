<div class="show-tools-container">
    <!--  columns  -->
    <!-- title -->
    <div class="title-backbutton-position">
        <h1 class="tool-title-show">
            <%= @tool.name %>
        </h1>
        <span class="back-button-position">
            <%= link_to tools_path, class: "back-btn" do %>
           <!--  <i class="fa fa-arrow-left"></i> -->Back
            <% end %>
        </span>
    </div>
    <div class="chip">
        <%= @tool.category %>
    </div>
    <div class="show-tool">
        <!-- tools -->
        <div class="tool-images">
            <!--  images & bookings  -->
            <%= image_tag @tool.picture, alt: "image of the tool", class: "img-tool"%>
        </div>
        <div class="description-price">
            <div class="description">
                <p>
                    <%= @tool.details %>
                </p>
            </div>
            <p><strong>Price: <span class="price">
                    <%= @tool.price_by_day %> â‚¬</span> / day</strong></p>
            <p><a href="#map"><span class="address-to-map">Address:
            </span><span class="price">  <%= @tool.address %></span>
           <!--  <i class="fa fa-chevron-circle-down address-to-map"></i> --></a></p>
        </div>
        <div class="tool-bookings">
            <!-- booking -->
            <div class="bookings d-inline-flex flex-row">
                <%= render "bookings/form", booking:@booking, tool:@tool %>
            </div>
        </div>
    </div>
</div>
<!-- map -->
<div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
