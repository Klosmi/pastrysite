<div class="container-form">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="form-wrapper">
                <h1 class="text-center1">Book a tool</h1>
                <h2 class="text-center1">please take a date:</h2>
                <br>
                <%= @tool.name%>
                <br>
                <%= simple_form_for [@tool, @booking] do |f| %>
                <br>
                <%= f.input  :start_date, as: :string, required: false, input_html: {id: "range_start"} %>
                <br>
                <%= f.input  :end_date,   as: :string, required: false, input_html: {id: "range_end"} %>
                <%= f.button :submit, "Book", class: "btn booking-button btn-secondary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<div id="booking-form-div" data-bookings="<%= @bookings_dates.to_json %>">
